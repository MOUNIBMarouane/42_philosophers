
NAME = libft.a

CC = cc
CFLAGS = -Wall -Wextra -Werror
AR = ar rc
RM = rm -f

FILES = ft_atoi.c \
		ft_bzero.c \
		ft_memset.c \
		ft_calloc.c \
		ft_putchar_fd.c \
		ft_memcpy.c \
		ft_memmove.c \
		ft_memchr.c \
		ft_memcmp.c \
		ft_strlen.c \
		ft_strlcpy.c \
		ft_strnstr.c \
		ft_strlcat.c \
		ft_strchr.c \
		ft_strrchr.c \
		ft_strncmp.c \
		ft_itoa.c \
		ft_strmapi.c \
		ft_putstr_fd.c \
		ft_putendl_fd.c \
		ft_isalpha.c \
		ft_isdigit.c \
		ft_isalnum.c \
		ft_isascii.c \
		ft_isprint.c \
		ft_toupper.c \
		ft_tolower.c \
		ft_strdup.c \
		ft_substr.c \
		ft_strjoin.c \
		ft_strtrim.c \
		ft_split.c \
		ft_putnbr_fd.c \
		ft_striteri.c 

FILES_B = 	ft_lstnew.c \
		ft_lstadd_front.c \
		ft_lstsize.c \
		ft_lstlast.c \
		ft_lstadd_back.c \
		ft_lstdelone.c \
		ft_lstclear.c \
		ft_lstiter.c \
		ft_lstmap.c 

OBJECT = $(FILES:.c=.o)
OBJECT_B = $(FILES_B:.c=.o)

all : $(NAME)

$(NAME) : $(OBJECT)
	$(AR) $@ $(OBJECT)

%.o : %.c libft.h
	$(CC) $(CFLAGS) -o $@ -c $<

bonus : $(OBJECT_B)
	$(AR) $(NAME) $(OBJECT_B)

clean :
	$(RM) $(OBJECT) $(OBJECT_B)

fclean : clean
	$(RM) $(NAME)

re : fclean all

.PHONY : fclean clean re all bonus
